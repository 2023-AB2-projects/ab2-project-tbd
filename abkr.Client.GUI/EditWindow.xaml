<Window x:Class="abkr.Client.GUI.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abkr.Client.GUI"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="75" Click="UpdateButton_Click"/>
        <DataGrid x:Name="EditGrid" Grid.Row="1" AutoGenerateColumns="True"/>
    </Grid>
</Window>

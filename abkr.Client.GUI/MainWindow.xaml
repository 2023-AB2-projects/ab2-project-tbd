<Window x:Class="abkr.Client.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Client" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtOutput" Grid.Row="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
        <DockPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBox x:Name="txtInput" Width="600" VerticalContentAlignment="Center"/>
            <Button x:Name="btnSend" Content="Send" Margin="10,0,0,0" Click="btnSend_Click"/>
        </DockPanel>
    </Grid>
</Window>
